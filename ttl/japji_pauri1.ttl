    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਸੋਚੈ"@pa ;
    gg:transliteration "socẖai"@en-Latn ;
    gg:translation "by thinking; through thought"@en .

### Tuk 1 – GlossUnit 2: ਸੋਚਿ ਨ ਹੋਵਈ

gg:japji_pauri1_tuk1_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਸੋਚਿ ਨ ਹੋਵਈ"@pa ;
    gg:transliteration "socẖ na hovee"@en-Latn ;
    gg:translation "purity / realization does not occur"@en .

### Tuk 1 – GlossUnit 3: ਜੇ ਸੋਚੀ

gg:japji_pauri1_tuk1_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਜੇ ਸੋਚੀ"@pa ;
    gg:transliteration "je socẖī"@en-Latn ;
    gg:translation "even if one keeps on thinking"@en .

### Tuk 1 – GlossUnit 4: ਲਖ ਵਾਰ

gg:japji_pauri1_tuk1_gu4 a gg:GlossUnit ;
    gg:index "4"^^xsd:integer ;
    gg:gurmukhi "ਲਖ ਵਾਰ"@pa ;
    gg:transliteration "lakh vār"@en-Latn ;
    gg:translation "hundreds of thousands of times"@en .

#################################################################
### Tuk 2
### ਚੁਪੈ ਚੁਪ ਨ ਹੋਵਈ ਜੇ ਲਾਇ ਰਹਾ ਲਿਵ ਤਾਰ ॥
#################################################################

gg:japji_pauri1_tuk2 a gg:Tuk ;
    gg:id "sggs_japji-pauri1_tuk2" ;
    gg:index "2"^^xsd:integer ;
    gg:belongsTo gg:japji_pauri1 ;
    gg:gurmukhi "ਚੁਪੈ ਚੁਪ ਨ ਹੋਵਈ ਜੇ ਲਾਇ ਰਹਾ ਲਿਵ ਤਾਰ ॥"@pa ;
    gg:transliteration "Cupai cup na hovee je lāe rahā liv tār."@en-Latn ;
    gg:translation "By remaining silent, silence is not obtained, even if one remains absorbed in deep inward focus."@en ;
    gg:hasTheme gg:SpiritualMethodFailure,
                   gg:Ego ;
    rdfs:comment "External or self-willed silence is not the same as true inner stillness; forced practices without alignment to Hukam cannot yield real peace."@en ;
    gg:hasGlossUnit gg:japji_pauri1_tuk2_gu1,
                    gg:japji_pauri1_tuk2_gu2,
                    gg:japji_pauri1_tuk2_gu3,
                    gg:japji_pauri1_tuk2_gu4 .

