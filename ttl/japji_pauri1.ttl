    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਚੁਪੈ"@pa ;
    gg:transliteration "cupai"@en-Latn ;
    gg:translation "by keeping silent; through silence"@en .

### Tuk 2 – GlossUnit 2: ਚੁਪ ਨ ਹੋਵਈ

gg:japji_pauri1_tuk2_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਚੁਪ ਨ ਹੋਵਈ"@pa ;
    gg:transliteration "cup na hovee"@en-Latn ;
    gg:translation "true silence / stillness is not attained"@en .

### Tuk 2 – GlossUnit 3: ਜੇ ਲਾਇ ਰਹਾ

gg:japji_pauri1_tuk2_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਜੇ ਲਾਇ ਰਹਾ"@pa ;
    gg:transliteration "je lāe rahā"@en-Latn ;
    gg:translation "even if one keeps oneself fixed / absorbed"@en .

### Tuk 2 – GlossUnit 4: ਲਿਵ ਤਾਰ

gg:japji_pauri1_tuk2_gu4 a gg:GlossUnit ;
    gg:index "4"^^xsd:integer ;
    gg:gurmukhi "ਲਿਵ ਤਾਰ"@pa ;
    gg:transliteration "liv tār"@en-Latn ;
    gg:translation "in a continuous thread of focused absorption"@en .

#################################################################
### Tuk 3
### ਭੁਖਿਆ ਭੁਖ ਨ ਉਤਰੀ ਜੇ ਬੰਨਾ ਪੁਰੀਆ ਭਾਰ ॥
#################################################################

gg:japji_pauri1_tuk3 a gg:Tuk ;
    gg:id "sggs_japji-pauri1_tuk3" ;
    gg:index "3"^^xsd:integer ;
    gg:belongsTo gg:japji_pauri1 ;
    gg:gurmukhi "ਭੁਖਿਆ ਭੁਖ ਨ ਉਤਰੀ ਜੇ ਬੰਨਾ ਪੁਰੀਆ ਭਾਰ ॥"@pa ;
    gg:transliteration "Bhukẖiā bhukẖ na utrī je bannā purīā bhār."@en-Latn ;
    gg:translation "The hunger of the hungry is not appeased, even if they amass loads and loads of worldly goods."@en ;
    gg:hasTheme gg:Desire,
                   gg:Ego,
                   gg:SpiritualMethodFailure ;
    rdfs:comment "Accumulation of material wealth or experiences cannot satisfy the deeper existential hunger of the soul; craving only multiplies through indulgence."@en ;
    gg:hasGlossUnit gg:japji_pauri1_tuk3_gu1,
                    gg:japji_pauri1_tuk3_gu2,
                    gg:japji_pauri1_tuk3_gu3,
                    gg:japji_pauri1_tuk3_gu4 .

