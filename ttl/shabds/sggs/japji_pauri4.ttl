    rdfs:comment "Actions bring the human body, but only Divine grace opens the doorway to liberation."@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk6_gu1,
                    gg:sggs_japji_pauri4_tuk6_gu2,
                    gg:sggs_japji_pauri4_tuk6_gu3,
                    gg:sggs_japji_pauri4_tuk6_gu4 .

gg:sggs_japji_pauri4_tuk6_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਕਰਮੀ"@pa ;
    gg:transliteration "karmī"@en-Latn ;
    gg:translation "by karma; through previous actions"@en .

gg:sggs_japji_pauri4_tuk6_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਆਵੈ ਕਪੜਾ"@pa ;
    gg:transliteration "āvai kapaṛā"@en-Latn ;
    gg:translation "the robe (human body) is obtained"@en .

gg:sggs_japji_pauri4_tuk6_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਨਦਰੀ"@pa ;
    gg:transliteration "nadarī"@en-Latn ;
    gg:translation "by His glance of grace"@en .

gg:sggs_japji_pauri4_tuk6_gu4 a gg:GlossUnit ;
    gg:index "4"^^xsd:integer ;
    gg:gurmukhi "ਮੋਖੁ ਦੁਆਰੁ"@pa ;
    gg:transliteration "mokh duār"@en-Latn ;
    gg:translation "the gate of liberation (mukti)"@en .

