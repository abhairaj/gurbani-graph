    rdfs:comment "Guru Nanak directs the seeker to the inner ambrosial time—when one meditates on the True Name and reflects on Divine greatness."@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk5_gu1,
                    gg:sggs_japji_pauri4_tuk5_gu2,
                    gg:sggs_japji_pauri4_tuk5_gu3 .

gg:sggs_japji_pauri4_tuk5_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਅਮ੍ਰਿਤ ਵੇਲਾ"@pa ;
    gg:transliteration "amrit velā"@en-Latn ;
    gg:translation "the ambrosial time; early dawn of spiritual awareness"@en .

gg:sggs_japji_pauri4_tuk5_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਸਚੁ ਨਾਉ"@pa ;
    gg:transliteration "sacẖ nāo"@en-Latn ;
    gg:translation "the True Name"@en .

gg:sggs_japji_pauri4_tuk5_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਵਡਿਆਈ ਵੀਚਾਰੁ"@pa ;
    gg:transliteration "vaḍiāī vīcẖār"@en-Latn ;
    gg:translation "contemplation of His greatness"@en .

#################################################################
### Tuk 6
### ਕਰਮੀ ਆਵੈ ਕਪੜਾ ਨਦਰੀ ਮੋਖੁ ਦੁਆਰੁ ॥
#################################################################

gg:sggs_japji_pauri4_tuk6 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk6" ;
    gg:index "6"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਕਰਮੀ ਆਵੈ ਕਪੜਾ ਨਦਰੀ ਮੋਖੁ ਦੁਆਰੁ ॥"@pa ;
    gg:transliteration "Karmī āvai kapaṛā, nadarī mokh duār."@en-Latn ;
    gg:translation "By karma one receives the robe of this body; by His gracious glance, the gate of liberation is found."@en ;
    gg:hasTheme gg:GraceAndKarma,
