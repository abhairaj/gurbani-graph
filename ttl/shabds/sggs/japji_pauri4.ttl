#################################################################
### Tuk 1
### ਸਾਚਾ ਸਾਹਿਬੁ ਸਾਚੁ ਨਾਉ ਭਾਖਿਆ ਭਾਉ ਅਪਾਰ ॥
#################################################################

gg:sggs_japji_pauri4_tuk1 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk1" ;
    gg:index "1"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਸਾਚਾ ਸਾਹਿਬੁ ਸਾਚੁ ਨਾਉ ਭਾਖਿਆ ਭਾਉ ਅਪਾਰ ॥"@pa ;
    gg:transliteration "Sācẖā sāhib sācẖ nāo, bẖākẖiā bẖāo apār."@en-Latn ;
    gg:translation "The Master is True, His Name is True; He is described with love that is boundless."@en ;
    gg:hasTheme gg:Truth,
                   gg:DivineName,
                   gg:DevotionalLove ;
    rdfs:comment "God and His Name are eternally True; the right way to relate is loving devotion, not dry description."@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk1_gu1,
                    gg:sggs_japji_pauri4_tuk1_gu2,
                    gg:sggs_japji_pauri4_tuk1_gu3 .

gg:sggs_japji_pauri4_tuk1_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਸਾਚਾ ਸਾਹਿਬੁ"@pa ;
    gg:transliteration "sācẖā sāhib"@en-Latn ;
    gg:translation "the True Master / Lord"@en .

gg:sggs_japji_pauri4_tuk1_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਸਾਚੁ ਨਾਉ"@pa ;
    gg:transliteration "sācẖ nāo"@en-Latn ;
    gg:translation "the True Name"@en .

gg:sggs_japji_pauri4_tuk1_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਭਾਖਿਆ ਭਾਉ ਅਪਾਰ"@pa ;
    gg:transliteration "bẖākẖiā bẖāo apār"@en-Latn ;
    gg:translation "He is spoken of with love that is limitless"@en .

#################################################################
### Tuk 2
### ਆਖਹਿ ਮੰਗਹਿ ਦੇਹਿ ਦੇਹਿ ਦਾਤਿ ਕਰੇ ਦਾਤਾਰੁ ॥
#################################################################

gg:sggs_japji_pauri4_tuk2 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk2" ;
    gg:index "2"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਆਖਹਿ ਮੰਗਹਿ ਦੇਹਿ ਦੇਹਿ ਦਾਤਿ ਕਰੇ ਦਾਤਾਰੁ ॥"@pa ;
    gg:transliteration "Ākheh mangheh deh deh, dāt kare dātār."@en-Latn ;
    gg:translation "People speak to Him, they ask and ask; the Giver keeps on giving His gifts."@en ;
    gg:hasTheme gg:PrayerAndAsking,
                   gg:DivineGifts ;
    rdfs:comment "Creation is constantly asking for more, and the Divine Giver continuously bestows."@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk2_gu1,
                    gg:sggs_japji_pauri4_tuk2_gu2,
                    gg:sggs_japji_pauri4_tuk2_gu3 .

gg:sggs_japji_pauri4_tuk2_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਆਖਹਿ ਮੰਗਹਿ"@pa ;
    gg:transliteration "ākheh mangheh"@en-Latn ;
    gg:translation "they speak and ask; they petition"@en .

gg:sggs_japji_pauri4_tuk2_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਦੇਹਿ ਦੇਹਿ"@pa ;
    gg:transliteration "deh deh"@en-Latn ;
    gg:translation "\"give, give\" – they keep begging"@en .

gg:sggs_japji_pauri4_tuk2_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਦਾਤਿ ਕਰੇ ਦਾਤਾਰੁ"@pa ;
    gg:transliteration "dāt kare dātār"@en-Latn ;
    gg:translation "the Giver keeps on giving gifts"@en .

#################################################################
### Tuk 3
### ਫੇਰਿ ਕਿ ਅਗੈ ਰਖੀਐ ਜਿਤੁ ਦਿਸੈ ਦਰਬਾਰੁ ॥
#################################################################

gg:sggs_japji_pauri4_tuk3 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk3" ;
    gg:index "3"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਫੇਰਿ ਕਿ ਅਗੈ ਰਖੀਐ ਜਿਤੁ ਦਿਸੈ ਦਰਬਾਰੁ ॥"@pa ;
    gg:transliteration "Pher ki agai rakhīai, jit disai darbār."@en-Latn ;
    gg:translation "So then, what offering should we place before Him, by which His Court may be seen?"@en ;
    gg:hasTheme gg:RightOffering ;
    rdfs:comment "After acknowledging endless asking and giving, Guru Nanak asks what offering truly opens the vision of the Divine Court."@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk3_gu1,
                    gg:sggs_japji_pauri4_tuk3_gu2,
                    gg:sggs_japji_pauri4_tuk3_gu3 .

gg:sggs_japji_pauri4_tuk3_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਫੇਰਿ ਕਿ ਅਗੈ ਰਖੀਐ"@pa ;
    gg:transliteration "pher ki agai rakhīai"@en-Latn ;
    gg:translation "then what should we place before Him?"@en .

gg:sggs_japji_pauri4_tuk3_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਜਿਤੁ ਦਿਸੈ"@pa ;
    gg:transliteration "jit disai"@en-Latn ;
    gg:translation "by which we may behold"@en .

gg:sggs_japji_pauri4_tuk3_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਦਰਬਾਰੁ"@pa ;
    gg:transliteration "darbār"@en-Latn ;
    gg:translation "the Divine Court; His Presence"@en .

#################################################################
### Tuk 4
### ਮੁਹੌ ਕਿ ਬੋਲਣੁ ਬੋਲੀਐ ਜਿਤੁ ਸੁਣਿ ਧਰੇ ਪਿਆਰੁ ॥
#################################################################

gg:sggs_japji_pauri4_tuk4 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk4" ;
    gg:index "4"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਮੁਹੌ ਕਿ ਬੋਲਣੁ ਬੋਲੀਐ ਜਿਤੁ ਸੁਣਿ ਧਰੇ ਪਿਆਰੁ ॥"@pa ;
    gg:transliteration "Muhau ki bolaṇ bolīai, jit suṇ dhare piār."@en-Latn ;
    gg:translation "What words should we utter with our mouth, by hearing which He bestows His love?"@en ;
    gg:hasTheme gg:RightOffering,
                   gg:DevotionalLove ;
    rdfs:comment "The real question becomes: what speech springs from such a place that, on hearing it, the Divine responds with love?"@en ;
    gg:hasGlossUnit gg:sggs_japji_pauri4_tuk4_gu1,
                    gg:sggs_japji_pauri4_tuk4_gu2,
                    gg:sggs_japji_pauri4_tuk4_gu3 .

gg:sggs_japji_pauri4_tuk4_gu1 a gg:GlossUnit ;
    gg:index "1"^^xsd:integer ;
    gg:gurmukhi "ਮੁਹੌ ਕਿ ਬੋਲਣੁ ਬੋਲੀਐ"@pa ;
    gg:transliteration "muhau ki bolaṇ bolīai"@en-Latn ;
    gg:translation "what should we speak with our mouth?"@en .

gg:sggs_japji_pauri4_tuk4_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਜਿਤੁ ਸੁਣਿ"@pa ;
    gg:transliteration "jit suṇ"@en-Latn ;
    gg:translation "such that, when He hears it"@en .

gg:sggs_japji_pauri4_tuk4_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਧਰੇ ਪਿਆਰੁ"@pa ;
    gg:transliteration "dhare piār"@en-Latn ;
    gg:translation "He places His love; He shows loving favor"@en .

#################################################################
### Tuk 5
### ਅਮ੍ਰਿਤ ਵੇਲਾ ਸਚੁ ਨਾਉ ਵਡਿਆਈ ਵੀਚਾਰੁ ॥
#################################################################

gg:sggs_japji_pauri4_tuk5 a gg:Tuk ;
    gg:id "sggs_japji_pauri4_tuk5" ;
    gg:index "5"^^xsd:integer ;
    gg:belongsTo gg:sggs_japji_pauri4 ;
    gg:gurmukhi "ਅਮ੍ਰਿਤ ਵੇਲਾ ਸਚੁ ਨਾਉ ਵਡਿਆਈ ਵੀਚਾਰੁ ॥"@pa ;
    gg:transliteration "Amrit velā sacẖ nāo, vaḍiāī vīcẖār."@en-Latn ;
