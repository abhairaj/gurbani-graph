    gg:gurmukhi "ਨਾਨਕ ਏਵੈ ਜਾਣੀਐ"@pa ;
    gg:transliteration "Nānak evai jāṇīai"@en-Latn ;
    gg:translation "O Nanak, understand it thus"@en .

gg:sggs_japji_pauri4_tuk7_gu2 a gg:GlossUnit ;
    gg:index "2"^^xsd:integer ;
    gg:gurmukhi "ਸਭੁ ਆਪੇ"@pa ;
    gg:transliteration "sabh āpe"@en-Latn ;
    gg:translation "He Himself is all"@en .

gg:sggs_japji_pauri4_tuk7_gu3 a gg:GlossUnit ;
    gg:index "3"^^xsd:integer ;
    gg:gurmukhi "ਸਚਿਆਰੁ"@pa ;
    gg:transliteration "sacẖiār"@en-Latn ;
    gg:translation "the truly True, Truthful One"@en .
