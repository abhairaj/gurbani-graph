@prefix gg:  <http://gurbani-graph.org/core#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix dct:   <http://purl.org/dc/terms/> .

#################################################################
### Ontology header
#################################################################

<http://gurbani-graph.org/gg>
    a owl:Ontology ;
    dct:title "Gurbani Graph Ontology"@en ;
    dct:creator "Gurbani Graph (ontology for Sri Guru Granth Sahib Ji and related bani)"@en ;
    dct:description "An ontology for modeling bani shabds, tuks, themes, authors, raags, and scriptural structure (ang, pauri, etc.) in a graph database."@en ;
    owl:versionInfo "0.1.0"@en .

#################################################################
### Core classes
#################################################################

gg:Scripture a owl:Class ;
    rdfs:label "Scripture"@en ;
    rdfs:comment "A scriptural volume or collection, e.g. Sri Guru Granth Sahib Ji, Dasam Granth, etc."@en .

gg:Theme a owl:Class ;
    rdfs:label "Theme"@en ;
    rdfs:comment "A conceptual or semantic theme such as Naam, Hukam, Divine Grace, etc., that can be associated to shabds or lines."@en .

gg:Person a owl:Class ;
    rdfs:label "Person"@en ;
    rdfs:comment "A person related to the bani, such as Guru Sahib, Bhagat, or other authors/commentators."@en .

gg:Raag a owl:Class ;
    rdfs:label "Raag"@en ;
    rdfs:comment "A musical raag in which a shabd is composed, e.g., Raag Vadhans, Raag Asa, etc."@en .

gg:Bani a owl:Class ;
    rdfs:label "Bani"@en ;
    rdfs:comment "A large composition unit comprised of Shabds or Pauris, e.g. Jap Ji Sahib."@en .

gg:Shabd a owl:Class ;
    rdfs:label "Shabd"@en ;
    rdfs:comment "A distinct hymn or composition unit, e.g., a Shabd on a given ang or a Pauri of Japji Sahib modeled as a composition node."@en .

gg:Pauri a owl:Class ;
    rdfs:label "Pauri"@en ;
    rdfs:comment "A stanza-like structural unit, e.g., pauris of Japji Sahib."@en .

gg:Tuk a owl:Class ;
    rdfs:label "Tuk"@en ;
    rdfs:comment "A single line of Gurbani belonging to a Shabd or Pauri."@en .

gg:GlossUnit a owl:Class ;
    rdfs:label "GlossUnit"@en ;
    rdfs:comment "A sub-span of a Tuk with its own literal gloss/meaning."@en .

gg:Morpheme a owl:Class ;
    rdfs:label "Morpheme"@en ;
    rdfs:comment "An atomic unit of meaning within a GlossUnit."@en .

#################################################################
### Object properties
#################################################################

gg:hasTuk a owl:ObjectProperty ;
    rdfs:label "has tuk"@en ;
    rdfs:comment "Links a Shabd (or Pauri) to the Lines that make it up."@en ;
    rdfs:domain gg:Shabd ;
    rdfs:range gg:Tuk .

gg:belongsTo a owl:ObjectProperty ;
    rdfs:label "belongs to"@en ;
    rdfs:comment "Links a child instance back to the parent it belongs to."@en ;
    rdfs:domain gg:Tuk ;
    rdfs:range gg:Shabd ;
    owl:inverseOf gg:hasTuk, gg:inBani .

gg:hasTheme a owl:ObjectProperty ;
    rdfs:label "has theme"@en ;
    rdfs:comment "Associates a Shabd or Tuk with one or more conceptual themes."@en ;
    rdfs:domain [ a owl:Class ;
                  owl:unionOf ( gg:Shabd gg:Tuk ) ] ;
    rdfs:range gg:Theme .

gg:hasAuthor a owl:ObjectProperty ;
    rdfs:label "has author"@en ;
    rdfs:comment "Relates a Shabd (or Pauri) to the Person who authored the bani (e.g., Guru Nanak Dev Ji)."@en ;
    rdfs:domain gg:Shabd ;
    rdfs:range gg:Person ;
    owl:inverseOf gg:authorOf .

gg:inBani a owl:ObjectProperty ;
    rdfs:label "in bani"@en ;
    rdfs:comment "Indicates which Bani a given Shabd or Pauri appears in."@en ;
    rdfs:domain gg:Shabd, gg:Pauri ;
    rdfs:range gg:Bani .

gg:inScripture a owl:ObjectProperty ;
    rdfs:label "in scripture"@en ;
    rdfs:comment "Indicates which Scripture a given Bani or Shabd appears in."@en ;
    rdfs:domain gg:Shabd, gg:Bani ;
    rdfs:range gg:Scripture .

gg:inRaag a owl:ObjectProperty ;
    rdfs:label "in raag"@en ;
    rdfs:comment "Indicates the Raag in which a Shabd is composed."@en ;
    rdfs:domain gg:Shabd ;
    rdfs:range gg:Raag .

#################################################################
### Datatype properties – Shabd / Pauri level
#################################################################

gg:id a owl:DatatypeProperty ;
    rdfs:label "id"@en ;
    rdfs:comment "A stable identifier for a Shabd, Tuk, or GlossUnit within the Gurbani Graph (e.g., sggs-ang555-shabd17, sggs-japji-pauri1)."@en ;
    rdfs:range xsd:string .

gg:indexInBani a owl:DatatypeProperty ;
    rdfs:label "sequence in ang"@en ;
    rdfs:comment "The ordinal position of the Shabd/Pauri with it's parent Bani."@en ;
    rdfs:domain gg:Shabd ;
    rdfs:range xsd:integer .

#################################################################
### Shared Datatype properties – Tuk level
#################################################################

gg:index a owl:DatatypeProperty ;
    rdfs:label "index"@en ;
    rdfs:comment "The position of something within it's parent."@en ;
    rdfs:domain gg:Tuk, gg:GlossUnit, gg:Morpheme ;
    rdfs:range xsd:integer .

gg:gurmukhi a owl:DatatypeProperty ;
    rdfs:label "Gurmukhi text"@en ;
    rdfs:comment "The original text in Gurmukhi script."@en ;
    rdfs:domain gg:Tuk, gg:GlossUnit, gg:Morpheme ;
    rdfs:range xsd:string .

gg:transliteration a owl:DatatypeProperty ;
    rdfs:label "transliteration"@en ;
    rdfs:comment "Roman transliteration of the Gurmukhi."@en ;
    rdfs:domain gg:Tuk, gg:GlossUnit, gg:Morpheme ;
    rdfs:range xsd:string .

gg:translation a owl:DatatypeProperty ;
    rdfs:label "translation"@en ;
    rdfs:comment "A translation of the Gurmukhi."@en ;
    rdfs:domain gg:Tuk, gg:GlossUnit, gg:Morpheme ;
    rdfs:range xsd:string .

#################################################################
### Datatype properties – Scripture / Raag / AngReference / Person
#################################################################

gg:ang a owl:DatatypeProperty ;
    rdfs:label "ang number"@en ;
    rdfs:comment "Ang (page) number within a scripture that the first line of a Pauri or Shabd."@en ;
    rdfs:domain gg:Pauri, gg:Shabd ;
    rdfs:range xsd:integer .

gg:role a owl:DatatypeProperty ;
    rdfs:label "person role"@en ;
    rdfs:comment "Role of the person in the context of Gurgg: Guru, Bhagat, Compiler, Commentator, etc."@en ;
    rdfs:domain gg:Person ;
    rdfs:range xsd:string .


### Object property: Tuk → GlossUnit → Morpheme

gg:hasGlossUnit a owl:ObjectProperty ;
    rdfs:label "has gloss unit"@en ;
    rdfs:comment "Associates a Tuk with one or more GlossUnits."@en ;
    rdfs:domain gg:Tuk ;
    rdfs:range gg:GlossUnit .

gg:hasMorpheme a owl:ObjectProperty ;
    rdfs:label "has morpheme"@en ;
    rdfs:comment "Associates a GlossUnit with one or more Morphemes."@en ;
    rdfs:domain gg:GlossUnit ;
    rdfs:range gg:Morpheme .
