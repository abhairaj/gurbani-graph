    shabd:id "sggs-japji-pauri2-line1" ;
    shabd:index "1"^^xsd:integer ;
    shabd:belongsTo sggs:japji_pauri2 ;
    shabd:gurmukhi "ਹੁਕਮੀ ਹੋਵਨਿ ਆਕਾਰ ਹੁਕਮੁ ਨ ਕਹਿਆ ਜਾਈ ॥"@pa ;
    shabd:transliteration "Hukmī hovan ākār hukam na kahiā jāī."@en-Latn ;
    shabd:translation "By His Hukam, forms come into being; His Hukam cannot be fully described."@en ;
    shabd:hasTheme shabd:Hukam,
                   shabd:CreationDestruction ;
    rdfs:comment "All manifest forms arise under Divine Command, yet the nature of Hukam itself transcends complete description or conceptual capture."@en ;
