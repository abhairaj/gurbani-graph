    dct:title "Japji Sahib – Pauri 2"@en ;
    shabd:ang "1"^^xsd:integer ;
    shabd:sequenceInAng "2"^^xsd:integer ;
    shabd:hasAuthor sggs:GuruNanakDevJi ;
