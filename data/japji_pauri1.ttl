    shabd:phraseIndex "2"^^xsd:integer ;
    shabd:phraseGurmukhi "ਨ ਉਤਰੀ"@pa ;
    shabd:phraseTransliteration "na utrī"@en-Latn ;
    shabd:phraseGlossEn "does not depart; is not satisfied"@en .

### Line 3 – Phrase 3: ਜੇ ਬੰਨਾ

sggs:japji_pauri1_line3_p3 a shabd:Phrase ;
    shabd:phraseIndex "3"^^xsd:integer ;
    shabd:phraseGurmukhi "ਜੇ ਬੰਨਾ"@pa ;
    shabd:phraseTransliteration "je bannā"@en-Latn ;
    shabd:phraseGlossEn "even if one should gather / accumulate"@en .

### Line 3 – Phrase 4: ਪੁਰੀਆ ਭਾਰ

