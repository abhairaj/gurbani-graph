    shabd:phraseIndex "3"^^xsd:integer ;
    shabd:phraseGurmukhi "ਜੇ ਲਾਇ ਰਹਾ"@pa ;
    shabd:phraseTransliteration "je lāe rahā"@en-Latn ;
    shabd:phraseGlossEn "even if one keeps oneself fixed / absorbed"@en .

### Line 2 – Phrase 4: ਲਿਵ ਤਾਰ

sggs:japji_pauri1_line2_p4 a shabd:Phrase ;
    shabd:phraseIndex "4"^^xsd:integer ;
    shabd:phraseGurmukhi "ਲਿਵ ਤਾਰ"@pa ;
    shabd:phraseTransliteration "liv tār"@en-Latn ;
    shabd:phraseGlossEn "in a continuous thread of focused absorption"@en .

#################################################################
### Line 3
### ਭੁਖਿਆ ਭੁਖ ਨ ਉਤਰੀ ਜੇ ਬੰਨਾ ਪੁਰੀਆ ਭਾਰ ॥
#################################################################

sggs:japji_pauri1_line3 a shabd:Line ;
    shabd:lineId "sggs-japji-pauri1-line3" ;
    shabd:index "3"^^xsd:integer ;
    shabd:belongsTo sggs:japji_pauri1 ;
    shabd:gurmukhi "ਭੁਖਿਆ ਭੁਖ ਨ ਉਤਰੀ ਜੇ ਬੰਨਾ ਪੁਰੀਆ ਭਾਰ ॥"@pa ;
    shabd:transliteration "Bhukẖiā bhukẖ na utrī je bannā purīā bhār."@en-Latn ;
    shabd:translationEn "The hunger of the hungry is not appeased, even if they amass loads and loads of worldly goods."@en ;
    shabd:hasTheme shabd:Desire,
