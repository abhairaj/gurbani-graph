                   shabd:SpiritualMethodFailure ;
    shabd:commentaryKeypoint "Accumulation of material wealth or experiences cannot satisfy the deeper existential hunger of the soul; craving only multiplies through indulgence."@en ;
    shabd:hasPhrase sggs:japji_pauri1_line3_p1,
                    sggs:japji_pauri1_line3_p2,
                    sggs:japji_pauri1_line3_p3,
                    sggs:japji_pauri1_line3_p4 .

### Line 3 – Phrase 1: ਭੁਖਿਆ ਭੁਖ

